<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false">



        <com.radoman.masinac.model.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:id="@+id/gPocetna"
            android:text="@string/pocetna"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_gravity="center_horizontal">



        <com.radoman.masinac.model.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/gStudentskiServisi"
            android:text="@string/studentski_servisi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_gravity="center_horizontal">



        <com.radoman.masinac.model.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/gMasinac"
            android:text="@string/masinacOrg" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        android:id="@+id/settings_group"
        style="@style/LinearLayout.GuillotineItem">

        <com.radoman.masinac.model.CanaroTextView
            android:textSize="20sp"
            android:id="@+id/faSettings"
            android:text="@string/fa_cogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.radoman.masinac.model.CanaroTextView
            android:textSize="20sp"
            android:id="@+id/gSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="PodeÅ¡avanja" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/settigs_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <com.radoman.masinac.model.CanaroTextView
        android:textSize="20sp"
        android:id="@+id/faEmpty"
        android:text="@string/fa_comments_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <com.radoman.masinac.model.CanaroTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/gEmpty"
            android:layout_marginLeft="5dp"
            android:text="Ne prikazuj prazne teme"
             />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/emptyBox" />


    </LinearLayout>

